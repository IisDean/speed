              <view class='video-play-btn'  wx:if='{{idx!=playIndex}}'>
                   <image class='play_img'  mode='aspectFill' data-index='{{idx}}' catchtap='videoPlay' src='../../assets/images/start_arr.png'></image>
              </view>
         
              <text wx:if='{{idx!=playIndex}}' class='video-duration fs-28'>{{course.duration}}</text>
            </view>
