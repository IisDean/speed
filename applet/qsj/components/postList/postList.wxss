/* components/postList/postList.wxss */
@import "../../utils/report.wxss";
.border_yellow{
  box-shadow: 0rpx 6rpx 0rpx #ffe4b1, 0rpx 6rpx 18rpx #888888;
}
.border_pink{
  box-shadow: 0rpx 6rpx 0rpx #ffbab1, 0rpx 6rpx 18rpx #888888;
}
.border_green{
  box-shadow: 0rpx 6rpx 0rpx #b1ffba, 0rpx 6rpx 18rpx #888888;
}
.border_blue{
  box-shadow: 0rpx 6rpx 0rpx #b1dbff, 0rpx 6rpx 18rpx #888888;
}
.dynamics{
  font-size: 32rpx;
  color: #15273d;
}
.item_title .item_id{
  font-size:26rpx;
}
.dynamics .dynamics_list .dynamics_item{
  background:#fff;
  border-radius:20rpx;
  padding:30rpx 25rpx;
  margin:0 20rpx 30rpx;
}
.dynamics_item .item_title{
  display: flex;
  justify-content: space-between;
}
.dynamics_item .item_title .item_left{
  display: flex;
  align-items: flex-start;
}
.dynamics_item .item_title .time{
  font-size:22rpx;
  color:#999;
}
.dynamics_item .item_title .avatar_img{
  width: 50rpx;
  height:50rpx;
  vertical-align: text-top;
  border-radius: 50%;
  background: #8c97a4;
  margin-right: 10rpx;
  margin-top: 4rpx;
}


.dynamics_item .item_right image{
  width: 31rpx;
  height: 5rpx;
  position: relative;
  top:-20rpx;
}
.dynamics_item .item_right{
  color: #f08eb5;
  width:80rpx;
  text-align: right;
}
.dynamics_item .item_right>view{
  height: 34rpx;
  width: 109rpx;
  border:1px solid #f08eb5;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  font-size: 20rpx;
  padding: 0 15rpx;
  box-sizing: border-box;
  justify-content: space-between;
}
.dynamics_item .post_name{
  color: #0e579a;
  display:flex;
  align-items:center;
  margin: 10rpx 0;
}
.dynamics_item .post_name .name{
  max-width: 450rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.dynamics_item .post_name .icon{
  font-size: 24rpx;
  background: #fac110;
  border-radius: 8rpx;
  color: #fff;
  padding: 2rpx 5rpx 5rpx;
  margin-right: 5rpx;
}
.dynamics_item .post_cont{
  margin-bottom: 15rpx;
}
.dynamics_item .cnts_img{
  display: flex;
  justify-content: space-between;
  flex-wrap:wrap;
}
.dynamics_item .cnts_img image{
  width: 205rpx;
  height: 165rpx;
  margin: 10rpx 8rpx 8rpx 0;
}

.video-item{
  position: relative;
  width: 595rpx;
  height: 240rpx;
  margin: 0 auto;
}
video{
  width: 100%;
  height: 100%;
}
.video-cover{
  position: absolute;
  left: 0;
  top: 0;
  width:100%;
  height: 100%;
}
.video-play-btn{
  position: absolute;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background: #3b4a5c;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  display: flex;
  align-items: center;
  justify-content: center;
}
.video-play-btn .play_img{
  width: 30rpx;
  height: 36rpx;
  margin-left: 5rpx;
}
.video-duration{
  position: absolute;
  right: 10px;
  bottom: 10px;
  color: #fff;
}
.post_foot{
  display: flex;
}
.tj{
  display: flex;
  align-items: center;
  margin-top:10rpx;
}
.tj .tj_item{
  height: 34rpx;
  width: 132rpx;
  font-size:25rpx;
  padding: 0 15rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;

}
.tj image{
  width: 32rpx;
  height: 26rpx;
  vertical-align: middle;
  margin-right: 10rpx;
   flex-grow: 0;
    flex-shrink: 0;
}

