/* components/header/header.wxss */
.header{
  height: 100rpx;
  position: relative;
  box-sizing: border-box;
}
.header .head_bg{
  width: 100%;
  height: 100%;
}
.header .header_cont{
  position: absolute;
  left: 0;
  right:0;
  width: 100%;
  height: 100%;
  bottom: 0;
  padding-left: 10rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-flow:row;
  align-items: center;
}
.header .head_logo{
  width:205rpx;
  height:92rpx;
}
.header .search_box{
  height: 60rpx;
  border-radius: 50rpx;
  background: #d7eaff;
  width:200rpx;
  flex:1;
  display: flex;
  padding-left: 10rpx;
  padding-right: 20rpx;
  align-items: center;
}
.header .search_icon{
  width:30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}
.header .hot_search{
  color: #15273d;
  font-size: 30rpx;
}