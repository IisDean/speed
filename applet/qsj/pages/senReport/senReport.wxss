/* pages/senReport/senReport.wxss */
.senReport{
  background: #fff;
}
.ql_container{
  margin-top: 10rpx;
  height: auto;
  width: 100%;
  min-height: 410rpx;
  padding: 10rpx;
  color: #15273d;
  font-size:32rpx;
  box-sizing: border-box
}
.footer{
  background: #f6f8f9;
  position: fixed;
  bottom: 0rpx;
  width:100%;
  box-sizing: border-box;
  /* padding: 0rpx 0rpx 20rpx 0; */
  border-top:1px solid #d1d5d9;
}
.footer .upload{
  margin: 20rpx 30rpx 15rpx 60rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
}
.footer .upload .upload_btn{
  width: 175rpx;
  height: 175rpx;
  position: relative;
  overflow: hidden;
  margin-right: 45rpx;
  margin-bottom: 10rpx;
}
.footer .upload .upload_img{
  width: 175rpx;
  height: 175rpx;
}
.close{
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  right: -50rpx;
  top:-50rpx;
  border-radius: 50%;
  background: #40a4fe;
}
.close image{
width:20rpx;
height:20rpx;
position:absolute;
bottom:20rpx;
left:20rpx;

}
.tool_bar{
  display: flex;
  height: 88rpx;
  align-items: center;
  justify-content: space-between;
  border-top:1px solid #bdc6d1;
  padding: 0rpx 20rpx;
}
.tool_bar .tool{
  display: flex;
}
.tool_bar .tool_icon{
  width:50rpx;
  height: 50rpx;
  margin-right: 50rpx;
}
.send{
  width:120rpx;
  height: 51rpx;
}
.expression{
  border-top: 4rpx solid #969ea9;
  padding: 20rpx;
}
.expression .expression_item{
  background: #969ea9;
  width: 140rpx;
  height: 140rpx;
  margin-right: 50rpx;
}
.expression .expression_item:nth-child(4n){
  margin-right: 0;
}
.pop{
  position: fixed;
  width:320rpx;
  height:120rpx;
  background: #fff;
  overflow: hidden;
  top:30%;
  left: 0;
  right: 0;
  margin: auto;
  z-index: 100;
  border-radius: 20rpx;
 box-shadow:  0rpx 6rpx 18rpx #ddd;
}
.pop .pop_cancel{
  position: absolute;
  width: 140rpx;
  height: 140rpx;
  right: -70rpx;
  top:-70rpx;
  border-radius: 50%;
  background: #40a4fe;
}
.pop .close_icon{
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  bottom:30rpx;
  left: 30rpx;
 
}
.pop .pop_title{
  font-size: 38rpx;
  text-align: center;
  padding: 40rpx
}