.tab_title{
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
  padding: 0rpx 20rpx;
  margin-top: 20rpx;
}
.title_item{
  width:168rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #15273d;
}
.title_item:first-child{
}
.title_item.active{
  background: #fac110;
  color: #fff;
}
.message_page{
  font-size:28rpx;
  color: #15273d;
}
.reply_list{
  margin-top: 20rpx;
}
.reply_item{
  background:#fff;
  border-radius:20rpx;
  padding:28rpx 25rpx;
  margin:0 20rpx 30rpx;
}
.reply_item .zan_num{
  margin-top: 10rpx;
}
.reply_item .post_name{
  color: #0e579a;
  display:flex;
  align-items:center;
  margin: 10rpx 0;
}
.reply_item .name{
  flex:1;
  display: flex;
  align-items: center;
}
.reply_item .name .name_cont{
  width: 315rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.reply_item .new_reply{
  color: #15273d;
  font-weight: bold;
}
.reply_item .post_name .icon{
  font-size: 24rpx;
  background: #fac110;
  border-radius: 8rpx;
  color: #fff;
  padding: 2rpx 5rpx 5rpx;
  margin-right: 5rpx;
}

.reply_item,.notice{
  background: #fff;
  border-radius: 20rpx;
  /* overflow: hidden; */
  padding: 30rpx 25rpx;
  margin: 0 20rpx 30rpx;
}
