.reply_item .swiper_title{
  display: flex;
  justify-content: space-between
}
.reply_item .swiper_title .left{
  font-size:28rpx;
  color: #15273d;
  /* display: flex; */
  /* align-items: center; */
}
.reply_item .left .icon{
  font-size: 24rpx;
  background: #fac110;
  border-radius: 8rpx;
  color: #fff;
  padding: 0rpx 8rpx 0rpx;
  margin-right: 5rpx;
  position: relative;
  /* top:-3rpx; */
}
.reply_item .link{
  color: #3897fe;
  text-decoration: underline;
  max-width: 312rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  position:relative;
  display:inline-block;
  /* top:9rpx; */

}
.reply_item .right{
  color: #7e8a98;
  font-size:24rpx;
  min-width: 120rpx;
  text-align: right;
  padding-top: 5rpx;
}
.reply_info{
  display: flex;
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #15273d;
}
.reply_info .head_img{
  width: 100rpx;
  height:100rpx;
  border-radius: 50%;
  background: #8c97a4;
  margin-right: 10rpx;
}
.reply_info .name{
  padding-top: 25rpx;
  margin-bottom: 10rpx;
}
.reply_info .post_info{
  background: #e8eaed;
  border-radius: 20rpx;
  padding: 15rpx 25rpx;
  margin-bottom: 10rpx;
}
.reply_info .post_info_item1{
  margin-bottom: 10rpx;
}
.reply_info .post_info_item2{
  color: #8c97a4;
}
.reply_info .reply_right{
  flex: 1;
}
.notice{
  padding: 0rpx;
  margin-bottom: 0;
  border-bottom-left-radius: 0;
  border-bottom-right-radius:0; 
}
.notice_item{
  display: flex;
  border-bottom: 1px solid #ddd;
  padding: 30rpx;
  font-size:28rpx;
}
.notice_cont{
  flex: 1;
}
.notice_item .avatar{
  width: 85rpx;
  height:85rpx;
  border-radius: 50%;
  background: #8c97a4;
  margin-right: 10rpx;
}
.notice_title .time{
  color: #999;
  font-size:24rpx;
}
.notice_item .notice_title{
  display: flex;
  flex: 1;
  margin-bottom: 20rpx;
  font-size:34rpx;
  justify-content: space-between;
  align-items: flex-end;
}