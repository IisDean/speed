/* components/friend-rank/friends-rank.wxss */
.fr-item-1 {
    width: 88rpx;
}
.fr-item-3 {
    width: 204rpx;
}
.fr-rank-item {
    height: 120rpx;
    border-bottom: 1px solid #d1d1d1;
}
.my-rank-item.fr-rank-item {
    margin-top: 20rpx;
    background-color: #e4e4e4;
    border: none;
}
.rank-title-text {
    line-height: 120rpx;
    font-weight: bold;
    font-size: 36rpx;
    color: #666;
}
.my-rank-item.fr-rank-item .rank-title-text {
    color: #b59064;
} 
.friends-avatar {
    width: 56rpx;
    height: 56rpx;
    border: 1rpx solid #333;
}
.friends-name-text {
    margin-left: 20rpx;
    width: 200rpx;
    font-size: 24rpx;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.my-rank-item.fr-rank-item .friends-name-text {
    color: #333;
}
.dw-icon {
    width: 25rpx;
    height: 30rpx;
}
.dw-msg-text {
    margin-left: 10rpx;
    vertical-align: middle;
    font-size: 24rpx;
    color: #333;
}
.my-rank-item.fr-rank-item .dw-msg-text {
    font-weight: bold;
    color: #333;
}